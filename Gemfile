source 'https://rubygems.org'

# The puppetlabs_spec_helper "build" job currently requires the `puppet module
# build` face. The build face is removed starting in Puppet 6. Until this
# module can be published another way, we need to lock to <6.
gem 'puppet', '>= 2.7', '< 6.0.0'

gem 'puppet-blacksmith', '~> 4.1'
gem 'puppetlabs_spec_helper'
gem 'rake'
gem 'rubocop', '~> 0.49'
